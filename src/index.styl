$primary-color = #3D5440
$link-color = #5f7862
$text-color = rgba(black, 90%)

page-container()
    // sets responsive width and horizontal margin
    width: calc(100vw - 2 * 25px)
    max-width: 620px

    margin-left: auto
    margin-right: auto

absolute-fill-parent()
    position: absolute
    display: block
    top: 0
    left: 0
    width: 100%
    height: 100%
    box-sizing: border-box

heading-font()
    font-family: 'Parisienne', cursive;
    font-weight: 400;
    line-height: 1.1
    color: $primary-color
    -webkit-text-stroke: $primary-color;
    -webkit-text-stroke-width: 0.01em;

paragraph-font()
    font-family: 'Noto Serif', serif;
    color: $text-color
    line-height: 1.5
    font-size: 18px

body
    margin: 0
    padding 0
    
    background: white

::selection
    background: rgba($primary-color, 30%)

.content
    page-container()

    h1
        heading-font()
        font-size: 46px

    h2
        margin-top: 2em
        heading-font()
        font-size: 40px

    h3
        margin-top: 2.5em
        paragraph-font()
        font-weight: 700

    p
        paragraph-font()
        text-align: justify

    a
        color: $link-color
        text-decoration: underline
        text-decoration-color: $link-color
        text-decoration-style: solid
        text-decoration-thickness: 1px
        text-underline-offset: 0.1em

        &:hover
            text-decoration: none

    ul
        page-container()
        box-sizing: border-box // fixes text overflow problems

    li
        paragraph-font()
        list-style-position: inside

blockquote
    $color = rgba($text-color, 50%)

    page-container()
    paragraph-font()
    font-style: italic
    color: $color
    border-left: 3px solid $color
    padding-left: 1em
    box-sizing: border-box


//////////////////
// Hero section //
//////////////////

$hero-scaledown-ratio = 0.8
$hero-scaledown-at = 500px

.hero
    padding: 50px 0 50px 0
    //background: #eee

.hero__aspect-container
    page-container()
    position: relative
    
    max-width: 500px
    @media screen and (max-width: $hero-scaledown-at)
        max-width: (500px - 50px) * $hero-scaledown-ratio

    background: white
    box-shadow: 2px 5px 10px 0px rgba(black, 20%)

    &:before
        content: ""
        display: block
        padding-top: 141.41%

.hero__flowers
    absolute-fill-parent()

    &:before, &:after
        content: ""
        absolute-fill-parent()

        background: url("flower-corner.png") bottom left no-repeat
        background-size: 62%

        @media screen and (max-width: $hero-scaledown-at)
            background-size: 62% * $hero-scaledown-ratio

    &:before
        transform: rotate(180deg)

.hero__card
    position: absolute
    display: block
    top: 50%
    left: 0
    width: 100%
    box-sizing: border-box
    transform: translateY(-50%)

    padding: 50px 10px
    z-index: 100

    p
        paragraph-font()
        font-size: 18px

    h1
        heading-font()
        font-size: 46px

    @media screen and (max-width: $hero-scaledown-at)
        h1
            font-size: 46px * $hero-scaledown-ratio
        p
            font-size: 18px * $hero-scaledown-ratio


